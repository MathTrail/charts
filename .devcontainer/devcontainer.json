{
  "name": "MathTrail Helm Charts",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.2": {
      "helm": "3.14.0",
      "version": "1.31.0",
      "minikube": "none"
    },
    "ghcr.io/eitsupi/devcontainer-features/just:0.1.1": {}
  },

  "remoteEnv": {
    "HELM_EXPERIMENTAL_OCI": "1"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-kubernetes.helm",
        "redhat.vscode-yaml",
        "tim-koehler.helm-intellisense",
        "eamodio.gitlens",
        "sclu1034.justfile"
      ],
      "settings": {
        "yaml.schemas": {
          "https://json.schemastore.org/helm-chart.json": "Chart.yaml"
        }
      }
    }
  }
}

